#
# Example inventory to deploy a kerberos realm and an AFS cell on multiple
# hosts.  AFS clients are installed using the DKMS package, which builds an
# OpenAFS kernel module to match the installed kernel version.  Be sure to
# update your systems before running the openafs plays.
#
[afs_kdcs]
afs01.example.com

[afs_databases]
afs02.example.com

[afs_fileservers]
afs02.example.com

[afs_clients]
afs03.example.com

[afs_robotest]
afs03.example.com

[afs_servers:children]
afs_databases
afs_fileservers

[afs_cell:children]
afs_servers
afs_clients

[all:vars]
afs_realm = EXAMPLE.COM

[afs_cell:vars]
afs_cell = example.com
afs_selinux_mode = permissive
afs_kdc_servers = afs01.example.com
afs_kadmin_server = afs01.example.com
afs_server_install_method = rsync
afs_client_install_method = rsync

# vim: set ft=cfg:
